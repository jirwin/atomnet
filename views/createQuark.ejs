<% include header %>
<% include nav %>

<div class="container">

  <div class="starter-template">
    <h1>Create a Quark</h1>
    <form method="POST" action="/create">
      <fieldset>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Name">
        </div>
        <div class="form-group">
          <label for="path">Path</label>
          <input type="text" class="form-control" id="path" name="path" placeholder="Path (e.g. my-first-kite)">
        </div>
        <div class="form-group">
          <label for="url">URL</label>
          <input type="text" class="form-control" id="url" name="url" placeholder="URL (e.g. http://www.google.com)">
        </div>
        <button type="submit" class="btn btn-default">Create Quark!</button>
      </fieldset>
    </form>
  </div>

</div><!-- /.container -->

<% include footer %>
